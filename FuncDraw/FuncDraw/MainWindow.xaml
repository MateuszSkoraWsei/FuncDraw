<Window x:Class="FuncDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FuncDraw"
        mc:Ignorable="d"
        Title="FuncDraw" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"  Name="mainGrid"/>
            <ColumnDefinition Width="200" Name="editor" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="1" Width="auto"  HorizontalAlignment="Stretch" Background="WhiteSmoke">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20px" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button 
                        x:Name="ShowHide"
                        Width="30"
                        BorderThickness="0" 
                        Background="WhiteSmoke"
                        Content="|||"
                        VerticalAlignment="Center"
                        Margin="0,0,150,0" Grid.Column="1"
                >
                    <Button.RenderTransform>
                        <RotateTransform Angle="90" />
                    </Button.RenderTransform>
                </Button>
                <Button 
                    Grid.Column="2"
                    Width="90" 
                    VerticalAlignment="top"
                    Margin="5"
                    Height="20"
                    >Button1</Button>
                <Button 
    Grid.Column="1"
    Width="90" 
    
    Margin="45,30,45,384"
    Height="20"
    >Button2</Button>

            </Grid>
        </DockPanel>

    </Grid>

</Window>
