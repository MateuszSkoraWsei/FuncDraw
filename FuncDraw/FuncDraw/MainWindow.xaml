<Window x:Class="FuncDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FuncDraw"
        mc:Ignorable="d"
        Title="FuncDraw" Height="450" Width="800"
        SizeChanged="GenerateGrid"
        MouseWheel="MainWindow_MouseWheelEvent">

    <Grid x:Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"  Name="mainGrid" />
            <ColumnDefinition Width="200" Name="editor"  />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Canvas x:Name="MainGrid" Background="WhiteSmoke" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseMove="Canvas_Mouse_Move" MouseLeftButtonDown="Canvas_LeftBtn_Down" MouseLeftButtonUp="Canvas_LeftBtn_Up"/>
        <DockPanel x:Name="SideMenu" Grid.Column="1" Width="200"  HorizontalAlignment="Left" Background="WhiteSmoke">

            <Grid x:Name="Container">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20px" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>
                    <StackPanel x:Name="ExpressionContainer" Grid.Column="1" Grid.Row="0" />
                    <Button Content="Centrój" x:Name="btnCentroj" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="160" Click="btnCentroj_Click"/>
                    <Button Content="Skala Domyślna" x:Name="btnSkala" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="160" RenderTransformOrigin="0.231,0.752" Click="btnSkala_Click"/>
                    <Button Content="Zapisz" x:Name="btnSave" HorizontalAlignment="Center" Margin="0,70,0,0" Grid.Row="1" VerticalAlignment="Top" Width="160" RenderTransformOrigin="0.231,0.752" Click="btnSave_Click"/>

                </Grid>

                <Button 
    Grid.Column="1"
    Width="20" 
    VerticalAlignment="top"
    Margin="2,0,5,5"
    Height="20"
    x:Name="AddBtn"
    Content="+" BorderBrush="WhiteSmoke" Foreground="Black" Background="WhiteSmoke" FontSize="16" FontWeight="Bold" Padding="0,0,6,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left"
    />
                <Button 
                    Grid.Column="0"
                    x:Name="ShowHideBtn"
                    Content="|||"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    RenderTransformOrigin="0.5,0.5" 
                    Width="20" Height="20" 
                    BorderBrush="WhiteSmoke" 
                    Background="WhiteSmoke"
                    >
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>




            </Grid>

        </DockPanel>

    </Grid>

</Window>
