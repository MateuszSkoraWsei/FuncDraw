<Window x:Class="FuncDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FuncDraw"
        mc:Ignorable="d"
        Title="FuncDraw" Height="450" Width="800"
        SizeChanged="GenerateGrid"
        MouseWheel="MainWindow_MouseWheelEvent">
    <Grid x:Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"  Name="mainGrid" />
            <ColumnDefinition Width="200" Name="editor" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="MainGrid" Background="WhiteSmoke" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        </Grid>
        <DockPanel x:Name="SideMenu" Grid.Column="1" Width="200"  HorizontalAlignment="Left" Background="WhiteSmoke">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20px" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button 
                    Grid.Column="2"
                    Width="90" 
                    VerticalAlignment="top"
                    Margin="5"
                    Height="20"
                    >Button1</Button>
                <Button 
    Grid.Column="1"
    Width="90" 
    
    Margin="45,30,45,384"
    Height="20"
    >Button2</Button>
                <Button x:Name="ShowHideBtn" Content="|||" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="20" Height="20" BorderBrush="WhiteSmoke" Background="WhiteSmoke">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>

            </Grid>
        </DockPanel>

    </Grid>

</Window>
